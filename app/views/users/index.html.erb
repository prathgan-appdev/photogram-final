  <body>
    <h1>List of users</h1>

<table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th></th>
    <th></th>
  </tr>

	<% @list_of_users.each do |a_user| %>
		
		<% if session.fetch(:user_id).present?# if logged in  %> 
			
			<%
			follow_requests = a_user.received_follow_requests
			matching_requests = follow_requests.where({ :sender_id => session.fetch(:user_id) })
			the_request = matching_requests.at(0)
			%>

			<% if the_request.present? # if requested this user %>
				<% if the_request.status == "approved" # if follow approved %> 
					<tr>
						<td>
							<%= a_user.username %>
						</td>

						<td>
							<% if a_user.private? %>
								Yes
							<% else %>
								No
							<% end %>
						</td>
						<td>
							<a href="/delete_follow_request/<%= a_user.id%>">
								Unfollow
							</a>
						</td>
						<td>
							<a href="/users/<%= a_user.username %>">
								Show details
							</a>
						</td>
					</tr>
				<% elsif the_request.status == "sent" # if request sent %> 
					<tr>
						<td>
							<%= a_user.username %>
						</td>

						<td>
							<% if a_user.private? %>
								Yes
							<% else %>
								No
							<% end %>
						</td>
						<td>
							Request sent.

							<a href="/delete_follow_request/<%= a_user.id%>">
								Cancel
							</a>
						</td>
						<td>
							<a href="/users/<%= a_user.username %>">
								Show details
							</a>
						</td>
					</tr>
				<% elsif the_request.status == "rejected" # if request rejected %> 
					
				<% end %>
			<% else # if never requested this user %> 
				<tr>
					<td>
						<%= a_user.username %>
					</td>

					<td>
						<% if a_user.private? %>
							Yes
						<% else %>
							No
						<% end %>
					</td>
					<td>
						<form action="/insert_follow_request" method="post">
							<input type="hidden" name="query_recipient_id" value="<%= a_user.id %>">

							<button>
								Follow
							</button>
						</form>
					</td>
					<td>
						<a href="/users/<%= a_user.username %>">
							Show details
						</a>
					</td>
				</tr>
			<% end %>
		<% else  # if not logged in %>
			<tr>
				<td>
					<%= a_user.username %>
				</td>

				<td>
					<% if a_user.private? %>
						Yes
					<% else %>
						No
					<% end %>
				</td>
				<td>
					<a href="/users/<%= a_user.username %>">
						Show details
					</a>
				</td>
			</tr>
		<% end %>
	<% end %>
</table>

